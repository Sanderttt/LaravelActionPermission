{
    "name": "robin-van-dijk/laravel-action-permission",
    "type": "library",
    "description": "A package to generate permissions from laravel controller actions",
    "keywords": [
        "RobinVanDijk",
        "LaravelActionPermission"
    ],
    "homepage": "https://github.com/RobinVanDijk/LaravelActionPermission",
    "license": "MIT",
    "authors": [
        {
            "name": "Robin van Dijk",
            "email": "robin-d@zien24.nl",
            "homepage": "http://www.zien24.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "RobinVanDijk\\LaravelActionPermission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RobinVanDijk\\LaravelActionPermission\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
